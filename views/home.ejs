      <div class="card-body">
        <h5 class="card-title text-dark" style="font-size: 16px;"><%= m.name %></h5>
        <p class="card-text text-success" style="15px">Rp. <%= m.price %></p>
        <a href="/bayar?idProduk=<%= m.id %>" class="btn btn-info shadow-sm text-light border-2 w-100 fw-bold">Pilih</a>
      </div>
    </div>
  </div>
  <% } %>
<% }) %>